{
  "name": "gestion-scolarite",
  "version": "1.0.0",
  "description": "Application de gestion de scolarité - Groupe Scolaire Bilingue La Grace De Dieu",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win --x64",
    "build:prod": "electron-builder --win --x64 --publish=never",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [],
  "author": "Groupe Scolaire Bilingue La Grace De Dieu",
  "license": "ISC",
  "build": {
    "appId": "com.ecole.gestion-scolarite",
    "productName": "Gestion Scolarité",
    "directories": {
      "output": "build",
      "buildResources": "src/assets"
    },
    "files": [
      "src/**/*",
      "frontend-dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "src/assets/logograce.png",
      "publisherName": "Groupe Scolaire Bilingue La Grace De Dieu"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gestion Scolarité",
      "uninstallDisplayName": "Gestion Scolarité"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "better-sqlite3": "^8.5.0",
    "electron": "^22.3.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  }
}